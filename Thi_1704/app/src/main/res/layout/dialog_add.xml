<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="15dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Thêm mới"
        android:textColor="#FB8C00"
        android:textSize="24dp"
        android:textStyle="bold" />
    <ImageView
        android:id="@+id/imgThi_add"
        android:layout_marginTop="20dp"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/pic"
        android:layout_marginBottom="10dp"
        android:scaleType="centerCrop"
        android:layout_gravity="center"
        />

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:errorEnabled="true"
        android:id="@+id/errHoTen">
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edtHoTen"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:hint="Tên sản phẩm: "/>
    </com.google.android.material.textfield.TextInputLayout>


    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:errorEnabled="true"
        android:id="@+id/errMonThi">
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edtMonThi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Môn thi: "
            android:layout_marginBottom="10dp"/>
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:errorEnabled="true"
        android:id="@+id/errNgayThi">
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edtNgayThi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Xuất xứ: "
            android:layout_marginBottom="15dp"/>
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:errorEnabled="true"
        android:id="@+id/errCaThi">
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edtCaThi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Ca thi: "
            android:layout_marginBottom="15dp"/>
    </com.google.android.material.textfield.TextInputLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnCancel_add"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20dp"
            android:backgroundTint="#53D1C4"
            android:text="CANCEL"
            android:textColor="#FFFFFF"
            android:textSize="20sp" />

        <Button
            android:id="@+id/btnAdd_add"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:backgroundTint="#FFADCA"
            android:text="ADD"
            android:textColor="#FFFCFD"
            android:textSize="20sp" />
    </LinearLayout>

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="25dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Thêm mới"
        android:textColor="#FB8C00"
        android:textSize="24dp"
        android:textStyle="bold" />
    <ImageView
        android:id="@+id/img_add"
        android:layout_marginTop="15dp"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/pic"
        android:layout_marginBottom="10dp"
        android:scaleType="centerCrop"
        android:layout_gravity="center"
        />

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:errorEnabled="true"
        android:id="@+id/errTen">
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edtTen"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Tên: "/>
    </com.google.android.material.textfield.TextInputLayout>


    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:errorEnabled="true"
        android:id="@+id/errMoTa">
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edtMoTa"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Mô tả: "
            />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:errorEnabled="true"
        android:id="@+id/errNgayNgap">
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edtNgayNhap"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Ngày nhập: "
            />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:errorEnabled="true"
        android:id="@+id/errTrangThai">
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edtSLBan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Trạng thái: "
            />
    </com.google.android.material.textfield.TextInputLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnCancel_add"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20dp"
            android:backgroundTint="#53D1C4"
            android:text="CANCEL"
            android:textColor="#FFFFFF"
            android:textSize="20sp" />

        <Button
            android:id="@+id/btnAdd_add"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:backgroundTint="#FFADCA"
            android:text="ADD"
            android:textColor="#FFFCFD"
            android:textSize="20sp" />
    </LinearLayout>

</LinearLayout>